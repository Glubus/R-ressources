<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base resources -->
    <string name="base_url">https://api.example.com</string>
    <string name="api_version">v2</string>
    
    <!-- Pure references (work in v0.3.0) -->
    <string name="full_api_url">@string/base_url</string>
    <string name="app_title">@string/app_name</string>
    
    <!-- Interpolated strings (v0.6.0) -->
    <string name="welcome_title">Welcome to @string/app_name!</string>
    <string name="api_url_with_version">@string/base_url/@string/api_version</string>
    
    <!-- Template functions (v0.6.0) -->
    <string name="greeting" template="Hello {name}, you have {count} messages!">
        <param name="name" type="string"/>
        <param name="count" type="int"/>
    </string>
    <string name="status" template="User {username} is {active}">
        <param name="username" type="string"/>
        <param name="active" type="bool"/>
    </string>
    
    <!-- Colors with references -->
    <color name="accent">#FF5722</color>
    <color name="button_color">@color/accent</color>
    
    <!-- Profile-specific resources -->
    <string name="api_endpoint" profile="debug">https://debug-api.example.com</string>
    <string name="api_endpoint" profile="release">https://api.example.com</string>
    
    <bool name="verbose_logging" profile="debug">true</bool>
    <bool name="verbose_logging" profile="release">false</bool>
    
    <int name="timeout_ms" profile="debug">10000</int>
    <int name="timeout_ms" profile="release">5000</int>
</resources>

